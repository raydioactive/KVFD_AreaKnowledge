{
  "version": 8,
  "name": "Reference Mode - With Labels",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "tiles": ["http://127.0.0.1:8000/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#a8ddf0",
        "fill-antialias": true
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "filter": ["==", "$type", "LineString"],
      "paint": {
        "line-color": "#a8ddf0",
        "line-width": {
          "base": 1.2,
          "stops": [[8, 0.5], [20, 6]]
        }
      }
    },
    {
      "id": "landcover_grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#d8e8c8",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "paint": {
        "fill-color": "#c4e1a4",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#e8e4e0"
      }
    },
    {
      "id": "landuse_commercial",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "commercial"],
      "paint": {
        "fill-color": "#f2dede"
      }
    },
    {
      "id": "landuse_industrial",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "industrial"],
      "paint": {
        "fill-color": "#e8e4f0"
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#d8e8c8"
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "building-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "line-color": "#c0b0a0",
        "line-width": 0.5
      }
    },
    {
      "id": "road_path",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "path", "track"],
      "paint": {
        "line-color": "#c0b0a0",
        "line-width": {
          "base": 1.2,
          "stops": [[13, 1], [20, 4]]
        },
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": {
          "base": 1.2,
          "stops": [[12, 1], [20, 8]]
        }
      }
    },
    {
      "id": "road_major",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "tertiary"],
      "paint": {
        "line-color": "#ffd700",
        "line-width": {
          "base": 1.2,
          "stops": [[10, 2], [20, 12]]
        }
      }
    },
    {
      "id": "road_major_casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "tertiary"],
      "paint": {
        "line-color": "#c0a060",
        "line-width": {
          "base": 1.2,
          "stops": [[10, 3], [20, 14]]
        }
      },
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      }
    },
    {
      "id": "road_highway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "trunk"],
      "paint": {
        "line-color": "#ff6b6b",
        "line-width": {
          "base": 1.2,
          "stops": [[8, 2], [20, 16]]
        }
      }
    },
    {
      "id": "road_highway_casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "trunk"],
      "paint": {
        "line-color": "#cc5555",
        "line-width": {
          "base": 1.2,
          "stops": [[8, 3], [20, 18]]
        }
      },
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      }
    },
    {
      "id": "boundary_county",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 6],
      "paint": {
        "line-color": "#9e9cab",
        "line-width": 2,
        "line-dasharray": [4, 2]
      }
    },
    {
      "id": "water_label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "water_name",
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Italic"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#5a7d9a",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place_city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Bold"],
        "text-size": 16,
        "text-offset": [0, 0.5]
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place_town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "town"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Semibold"],
        "text-size": 14,
        "text-offset": [0, 0.5]
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place_village",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "village", "hamlet"],
      "minzoom": 11,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Regular"],
        "text-size": 12,
        "text-offset": [0, 0.5]
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "road_label_highway",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "filter": ["in", "class", "motorway", "trunk"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Bold"],
        "text-size": 12,
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#cc5555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "road_label_major",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "filter": ["in", "class", "primary", "secondary", "tertiary"],
      "minzoom": 12,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Semibold"],
        "text-size": 11,
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "road_label_minor",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "filter": ["in", "class", "minor", "service"],
      "minzoom": 14,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Regular"],
        "text-size": 10,
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
