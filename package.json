{
  "name": "moco-ems-trainer",
  "version": "1.0.0",
  "description": "Montgomery County EMS Area Familiarization & Destination Trainer",
  "main": "electron/main.js",
  "author": "MCFRS",
  "license": "MIT",
  "scripts": {
    "dev": "electron electron/main.js",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --universal",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "get-port": "^7.0.0",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.mcfrs.emstrainer",
    "productName": "MoCo EMS Trainer",
    "directories": {
      "buildResources": "resources",
      "output": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/moco-ems-backend.exe",
        "to": "backend/moco-ems-backend.exe"
      },
      {
        "from": "routing/graphhopper",
        "to": "graphhopper"
      },
      {
        "from": "database/schema",
        "to": "schema"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "shortcutName": "MoCo EMS Trainer"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.education"
    }
  }
}
